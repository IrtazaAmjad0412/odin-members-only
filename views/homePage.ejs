<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= appTitle %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include("header.ejs") %>
    <section class="page-header">
      <% if (user) { %>
      <h2 class="welcome-message">Welcome, <%= user.first_name %></h2>
      <% } else { %>
      <h2 class="welcome-message">Welcome, Guest</h2>
      <% } %>
      <div class="actions">
        <a href="/posts/new" class="btn">New Post</a>
      </div>
    </section>
    <div class="post-list">
      <% posts.forEach((post)=> { %>
      <div class="post-card"></div>
      <% }) %>
    </div>
  </body>
</html>
